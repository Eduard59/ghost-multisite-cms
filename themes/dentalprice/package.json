{
  "name": "dentalprice-theme",
  "description": "Custom Ghost theme for DentalPrice AI Blog",
  "version": "1.0.0",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "license": "MIT",
  "author": {
    "name": "DentalPrice AI",
    "email": "team@dentalprice.ai",
    "url": "https://dentalprice.ai"
  },
  "config": {
    "posts_per_page": 10,
    "image_sizes": {
      "xxs": { "width": 30 },
      "xs": { "width": 100 },
      "s": { "width": 300 },
      "m": { "width": 600 },
      "l": { "width": 1200 },
      "xl": { "width": 2000 }
    },
    "card_assets": true,
    "custom": {
      "navigation_layout": {
        "type": "select",
        "options": ["Logo on the left", "Logo in the middle"],
        "default": "Logo on the left"
      },
      "color_scheme": {
        "type": "select",
        "options": ["Light", "Dark", "Auto"],
        "default": "Light"
      }
    }
  },
  "keywords": [
    "ghost-theme",
    "ghost",
    "theme",
    "dentalprice",
    "blog"
  ]
}