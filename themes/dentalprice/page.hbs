{{!< default}}

{{#post}}
<article class="container mx-auto px-4 py-12">
    <div class="max-w-4xl mx-auto">
        {{!-- Page Header --}}
        <header class="mb-8">
            <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">{{title}}</h1>
            {{#if custom_excerpt}}
                <p class="text-xl text-gray-600">{{custom_excerpt}}</p>
            {{/if}}
        </header>
        
        {{!-- Page Content --}}
        <div class="ghost-content prose prose-lg max-w-none">
            {{content}}
        </div>
        
        {{!-- Last Updated --}}
        <footer class="mt-12 pt-8 border-t">
            <p class="text-sm text-gray-500">
                Last updated: <time datetime="{{date updated_at format='YYYY-MM-DD'}}">{{date updated_at format="MMMM DD, YYYY"}}</time>
            </p>
        </footer>
    </div>
</article>
{{/post}}