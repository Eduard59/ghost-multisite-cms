{
  "url": "https://ghost-cms-simple.onrender.com",
  "server": {
    "port": 2368,
    "host": "0.0.0.0"
  },
  "database": {
    "client": "sqlite3",
    "connection": {
      "filename": "/var/lib/ghost/content/data/ghost.db"
    }
  },
  "mail": {
    "transport": "Direct"
  },
  "logging": {
    "transports": ["stdout"]
  },
  "paths": {
    "contentPath": "/var/lib/ghost/content"
  },
  "privacy": {
    "useUpdateCheck": false,
    "useGravatar": false,
    "useRpcPing": false,
    "useStructuredData": true
  },
  "compress": true,
  "imageOptimization": {
    "resize": true
  },
  "auth": {
    "type": "password",
    "method": "password"
  },
  "labs": {
    "emailVerification": false
  },
  "members": {
    "emailVerification": false
  },
  "admin": {
    "emailVerification": false
  }
}